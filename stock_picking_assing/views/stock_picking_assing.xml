<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stock_picking_assign_form_view" model="ir.ui.view">
            <field name="name">Formulario de Asignacion de Picking</field>
            <field name="model">stock.picking.assign</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <notebook>
                            <page></page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="stock_picking_assign_tree_view" model="ir.ui.view">
            <field name="name">Listado de Asignacion de Picking</field>
            <field name="model">stock.picking.assign</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="stock_picking_assign_act_window" model="ir.actions.act_window">
            <field name="name">Asignacion Picking</field>
            <field name="res_model">stock.picking.assign</field>
            <field name="view_id" ref="stock_picking_assign_tree_view"/>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <menuitem name="Asignacion" id="stock_picking_assign_parent_menu" parent="stock.menu_stock_root"/>

        <menuitem name="Asignaciones" id="stock_picking_assign_menu" parent="stock_picking_assign_parent_menu" sequence="8" action="stock_picking_assign_act_window"/>
    </data>
</odoo>