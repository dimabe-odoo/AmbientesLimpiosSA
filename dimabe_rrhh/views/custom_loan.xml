<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="custom_loan_form" model="ir.ui.view">
            <field name="name">custom_loan.form</field>
            <field name="model">custom.loan</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="employee_id"/>
                            <h1>
                                <field name="employee_id"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="fee_qty" required="1"/>
                                <field name="fee_value" required="1"/>
                                <field name="next_fee_date"/>
                                <field name="loan_total"/>
                                <button type="object" string="Calcular" name="calculate_fee" class="oe_inline oe_link"/>
                            </group>
                            <group>
                                <field name="rule_id"/>
                                <field name="indicator_id"/>
                                <field name="date_start" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cuotas" name="fee">
                                <field name="fee_ids">
                                    <tree create="false" editable="bottom" delete="false">
                                        <field name="paid" readonly="1"/>
                                        <field name="number" readonly="1"/>
                                        <field name="expiration_date" readonly="1"/>
                                        <field name="value" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="custom_loan_tree_view" model="ir.ui.view">
            <field name="name">custom_loan_tree_view</field>
            <field name="model">custom.loan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id" widget="many2onebutton"/>
                    <field name="fee_qty"/>
                </tree>
            </field>
        </record>


        <record id="custom_loan_act_window" model="ir.actions.act_window">
            <field name="name">Prestamos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">custom.loan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Prestamos" id="custom_loan_menu" parent="hr_work_entry_contract.menu_hr_payroll_root" sequence="100" action="custom_loan_act_window"/>

    </data>
</odoo>