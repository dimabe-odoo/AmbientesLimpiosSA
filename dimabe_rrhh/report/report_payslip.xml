<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dimabe_rrhh.report_payslip">
        <t t-call="web.html_container">
            <div class="page">
                <t t-foreach="docs" t-as="d">
                    <div style="width: 100%;">
                        <table style="width: 100%;">
                            <tr>
                                <td style="width: 50%;">
                                    <div style="height: 100px; text-align: left; padding: 10px;">
                                        <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)" style="max-width: 200px; max-height: 120px"/>
                                    </div>
                                </td>
                                <td>
                                    <div style="height: 100px; text-align: right; padding: 10px;">
                                        <span style="font-size: 20px; font-weight: bold; color: #004080;">Liquidación de Remuneraciones</span>
                                        <br/>
                                        <span style="font-weight: bold;" t-field="d.indicator_id"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <br/>
                    <span style="font-weight: bold; font-size: 12px;" t-field="res_company.name"></span>
                    <br/>
                    <span style="font-weight: bold; font-size: 12px;">RUT</span>
                    <span style="font-weight: bold; font-size: 12px;" t-field="res_company.vat"></span>
                    <br/>
                    <br/>
                    <div style="width:100%;margin:0 auto;border:2px solid #0080bf; border-radius: 5px; margin-top:4px;">
                        <table style="width:100%;font-size:11px;" cellspacing="0">
                            <tr style="background-color: #004080; font-weight: bold;">
                                <th style="width:50%;border-right:2px solid #0080bf;border-bottom:2px solid #0080bf; padding: 6px;" colspan="2">
                                    <span style="color: white;">Código:</span>
                                </th>
                                <th style="width:50%;border-bottom:2px solid #0080bf; padding: 6px;" colspan="2">
                                    <span style="color: white;">Nombre:</span>
                                    <span style="color: #e1e434;" t-field="d.employee_id.last_name"/>
                                    <span style="color: #e1e434;" t-field="d.employee_id.mothers_name"/>
                                    <span style="color: #e1e434;" t-field="d.employee_id.first_name"/>
                                    <span style="color: #e1e434;" t-field="d.employee_id.middle_name"/>
                                </th>
                            </tr>
                            <tr>
                                <td style="text-align: right; width: 25%;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf; padding-right: 6px;">R.U.T.</td>
                                <td style="text-align: left; width: 25%;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf; padding-left: 6px;">
                                    <span t-field="d.employee_id.identification_id"/>
                                </td>
                                <td style="text-align: right; width: 25%;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Cargo</td>
                                <td style="text-align: left; width: 25%;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                    <span t-field="d.employee_id.job_title"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Ubicación</td>
                                <td style="text-align: left;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                    <span t-field="d.employee_id.department_id.name"/>
                                </td>
                                <td style="text-align: right;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Fecha Ingreso</td>
                                <td style="text-align: left;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                    <span t-field="d.contract_id.date_start"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Costo</td>
                                <td style="text-align: left;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                    <t t-if="res_company.analitic_account == '1'">
                                        <span t-esc="d.account_analytic_id.name.capitalize()"/>
                                    </t>
                                    <t t-if="res_company.analitic_account == '2'">
                                        <span t-esc="d.contract_id.analytic_account_id.name.capitalize()"/>
                                    </t>
                                    <t t-if="res_company.analitic_account == '3'">
                                        <span t-esc="d.contract_id.department_id.analytic_account_id.name.capitalize()"/>
                                    </t>
                                </td>
                                <td style="text-align: right;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Días trabajados</td>
                                <td style="text-align: left;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                    <t t-foreach="d.worked_days_line_ids" t-as="wd">
                                        <t t-if="wd.work_entry_type_id.code == 'WORK100'">
                                            <span t-esc="int(wd.number_of_days)"/>
                                        </t>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Forma Pago</td>
                                <td style="text-align: left;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                  <span t-field="d.payment_term_id.name"/>
                                </td>
                                <td style="border-bottom: 1px solid #0080bf;"></td>
                                <td style="border-bottom: 1px solid #0080bf;"></td>
                            </tr>
                            <tr>
                                <td style="text-align: right;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Banco</td>
                                <td style="text-align: left;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                  <span t-field="d.employee_id.bank_account_id.bank_id.name"/>
                                </td>
                                <td style="text-align: right;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Cuenta</td>
                                <td style="text-align: left;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                  <span t-field="d.employee_id.bank_account_id.acc_number"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Monto Imponible</td>
                                <td style="text-align: left;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                    <span t-field="d.line_ids.filtered(lambda a: a.code == 'TOTIM').total"/>
                                </td>
                                <td style="text-align: right;border-right:2px solid #0080bf;border-bottom: 1px solid #0080bf;padding-right: 6px;">Monto Afecto</td>
                                <td style="text-align: left;border-bottom: 1px solid #0080bf;padding-left: 6px;">
                                    <span t-field="d.line_ids.filtered(lambda a: a.code == 'TRIBU').total"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right;border-right:2px solid #0080bf;padding-right: 6px;">Haber Ajuste S.M.</td>
                                <td style="text-align: left;border-right:2px solid #0080bf;padding-left: 6px;">
                      
                        </td>
                                <td style="text-align: right;border-right:2px solid #0080bf;padding-right: 6px;">Monto Ajuste S.M.</td>
                                <td style="text-align: left;padding-left: 6px;">
                        
                        </td>
                            </tr>
                        </table>
                    </div>
                    <br/>
                    <div style="width:100%;margin:0 auto;border:2px solid #0080bf; border-radius: 5px; margin-top:4px;">
                        <table style="width:100%;font-size:11px;" cellspacing="0" >
                            <tr style="background-color: #004080; font-weight: bold;">
                                <th style="text-align:left;width:60%;border-right:2px solid #0080bf;border-bottom:2px solid #0080bf; padding: 6px;">
                                    <span style="color: white;">DETALLE:</span>
                                </th>
                                <th style="text-align:left;width:20%;border-right:2px solid #0080bf;border-bottom:2px solid #0080bf; padding: 6px;">
                                    <span style="color: white;">HABERES:</span>
                                </th>
                                <th style="text-align:left;width:20%;border-right:2px solid #0080bf;border-bottom:2px solid #0080bf; padding: 6px;">
                                    <span style="color: white;">DESCUENTOS:</span>
                                </th>
                            </tr>
                            <tr>
                                <td style="padding-left: 6px; font-weight: bold;border-right: 1px solid #0080bf;">HABER AFECTOS</td>
                                <td style="border-right: 1px solid #0080bf"></td>
                            </tr>
                            <tr>
                              <td style="border-right: 1px solid #0080bf;padding-left: 6px;">
                                <span t-field="d.line_ids.filtered(lambda a: a.code == 'SUELDO').name"/>
                              </td>
                              <td style="border-right: 1px solid #0080bf;text-align: right;padding-right: 6px;">
                                <span t-field="d.line_ids.filtered(lambda a: a.code == 'SUELDO').total"/>
                              </td>
                            </tr>
                            <t t-if="d.line_ids.filtered(lambda a: a.code == 'GRAT')">
                              <tr>
                                <td style="border-right: 1px solid #0080bf;padding-left: 6px;">
                                  <span t-field="d.line_ids.filtered(lambda a: a.code == 'GRAT').name"/>
                                </td>
                                <td style="border-right: 1px solid #0080bf;text-align: right;padding-right: 6px;">
                                  <span t-field="d.line_ids.filtered(lambda a: a.code == 'GRAT').total"/>
                                </td>
                              </tr>
                            </t>
                            <t t-if="d.line_ids.filtered(lambda a: a.code == 'MANGRAT')">
                              <tr>
                                <td style="border-right: 1px solid #0080bf;padding-left: 6px;">
                                  <span t-field="d.line_ids.filtered(lambda a: a.code == 'MANGRAT').name"/>
                                </td>
                                <td style="border-right: 1px solid #0080bf;text-align: right;padding-right: 6px;">
                                  <span t-field="d.line_ids.filtered(lambda a: a.code == 'MANGRAT').total"/>
                                </td>
                              </tr>
                            </t>
                            
                            <t t-foreach="d.line_ids" t-as="l">
                                <t t-if="l.category_id.code == 'IMP' and l.code != 'SUELDO' and l.code != 'GRAT' and l.code != 'MANGRAT'">
                                    <tr>
                                        <td style="padding-left: 6px;border-right: 1px solid #0080bf;">
                                            <span t-field="l.name"/>
                                        </td>
                                        <td style="padding-right: 6px;border-right: 1px solid #0080bf;text-align: right;">
                                            <span t-field="l.total"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <t t-if="len(d.line_ids.filtered(lambda a: a.category_id.code == 'NOTIMP')) > 0">
                              <tr>
                                  <td style="padding-left: 6px; font-weight: bold; border-right: 1px solid #0080bf;">HABERES EXENTOS</td>
                                  <td style="border-right: 1px solid #0080bf"></td>
                              </tr>
                              <t t-foreach="d.line_ids" t-as="l">
                                  <t t-if="l.category_id.code == 'NOTIMP'">
                                      <tr>
                                          <td style="padding-left: 6px;border-right: 1px solid #0080bf;">
                                              <span t-field="l.name"/>
                                          </td>
                                          <td style="padding-right: 6px;border-right: 1px solid #0080bf;text-align: right;">
                                              <span t-field="l.total"/>
                                          </td>
                                      </tr>
                                  </t>
                              </t>
                            </t>
                            <tr>
                                <td style="padding-left: 6px; font-weight: bold;border-right: 1px solid #0080bf">DESCUENTOS LEYES SOCIALES</td>
                                <td style="border-right: 1px solid #0080bf"></td>
                            </tr>
                            <t t-foreach="d.line_ids" t-as="l">
                                <t t-if="l.category_id.code == 'PREV' or l.category_id.code == 'DES' or l.code == 'FONASA' or  l.code == 'CAJACOMP'">
                                    <tr>
                                        <td style="padding-left: 6px;border-right: 1px solid #0080bf;">
                                            <t t-if="l.code=='PREV'">
                                                <span t-esc="d.indicator_id.data_ids.filtered(lambda a: a.name.upper() == 'TASA AFP {}'.format(d.contract_id.afp_id.name.upper()) ).percentage_show"/>
                                                <span t-field="d.contract_id.afp_id.name"/>
                                                <span t-field="l.name"/>
                                            </t>
                                            <t t-elif="l.code=='SECE'">
                                                <span t-field="l.name"/>:
                                                <t t-if="d.contract_id.type_id.code == '1'">
                                                    <span t-esc="d.indicator_id.data_ids.filtered(lambda a: a.name =='Contrato Plazo Indefinido Trabajador').percentage_value"/>
                                                </t>
                                                <t t-if="d.contract_id.type_id.code == '3'">
                                                    <span t-esc="d.indicator_id.data_ids.filtered(lambda a: a.name =='Plazo Indefinido 11 años o más').percentage_value"/>
                                                </t>
                                            </t>
                                            <t t-elif="l.code=='APV'">
                                                <span t-field="l.name"/>
                                                <span t-field="d.contract_id.apv_amount"/>
                                                <t t-if="d.contract_id.apv_currency == 'uf'">
                                                  UF
                                                </t>
                                                <t t-if="d.contract_id.apv_currency == 'clp'">
                                                  Peso $
                                                </t>
                                            </t>
                                            <t t-elif="l.code == 'IMPUNI'">
                                                <span t-field="l.name"/>
                                            </t>
                                            <t t-elif="l.code == 'CAJACOMP' and l.total > 0">
                                                <span t-field="l.name"/>
                                            </t>
                                            <t t-else="">
                                                <span t-field="l.name"/>
                                            </t>
                                        </td>
                                        <td style="border-right: 1px solid #0080bf;"></td>
                                        <td style="padding-right: 6px; text-align: right;">
                                            <span t-field="l.total"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <t t-if="len(d.line_ids.filtered(lambda a: a.category_id.code == 'ODES')) > 0">
                              <tr>
                                  <td style="padding-left: 6px; font-weight: bold;border-right: 1px solid #0080bf">OTROS DESCUENTOS</td>
                                  <td style="border-right: 1px solid #0080bf"></td>
                              </tr>
                              <t t-foreach="d.line_ids" t-as="l">
                                  <t t-if="l.category_id.code == 'ODES'">
                                      <tr>
                                          <td style="padding-left: 6px;border-right: 1px solid #0080bf;">
                                              <span t-field="l.name"/>
                                          </td>
                                          <td style="border-right: 1px solid #0080bf;"></td>
                                          <td style="padding-right: 6px; text-align: right;">
                                              <span t-field="l.total"/>
                                          </td>
                                      </tr>
                                  </t>
                              </t>
                            </t>
                            <tr style="font-weight: bold;">
                                <td style="padding-left: 6px; border-top: 2px solid #0080bf;border-right: 1px solid #0080bf;">TOTALES</td>
                                <td style="padding-right: 6px; border-top: 2px solid #0080bf;border-right: 1px solid #0080bf; text-align: right;"><span t-field="d.line_ids.filtered(lambda a: a.code == 'HAB').total"/></td>
                                <td style="padding-right: 6px; border-top: 2px solid #0080bf;text-align: right;"><span t-field="d.line_ids.filtered(lambda a: a.code == 'TDE').total"/></td>
                            </tr>
                            <tr style="background-color: #004080; font-weight: bold; color: white;">
                                <td style="padding: 6px;">LIQUIDO A PAGAR</td>
                                <td></td>
                                <td style="text-align: right; padding-right: 6px;">
                                    <span t-field="d.line_ids.filtered(lambda a: a.code == 'LIQ').total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <br/>
                    <div style="width:100%;margin:0 auto;border:2px solid #0080bf; border-radius: 5px; margin-top:4px;">
                        <table style="width:100%;font-size:11px;" cellspacing="0" >
                            <tr>
                                <td style="padding: 6px;">Recibí conforme la suma de:</td>
                                <td style="padding: 6px;">$
                                    <span t-field="d.line_ids.filtered(lambda a: a.code == 'LIQ').total"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 6px;">Por remuneraciones correspondientes a:</td>
                                <td style="padding: 6px;">
                                    <span t-field="d.indicator_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 6px;">Son: </td>
                                <td style="padding: 6px;">
                                    <t t-foreach="d.line_ids.filtered(lambda line: line.appears_on_payslip)" t-as="p">
                                        <t t-if="('LIQ' == p.code) and (p.amount>0)">
                                            <span t-esc="d.company_id.currency_id.amount_to_text(p.amount)" />
                                        </t>
                                    </t>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div style="width: 100%;">
                        <p style="font-size:12px">Certifico el haber recibido conforme la remuneración menusal de parte de mi empleador y lo libero de cualquier reclamo
                                por error u omisión en la presenta liquidación
                        </p>
                    </div>
                    <div style="width: 100%;  float: right; text-align: right;margin-top: 80px;">
                        <table style="width: 100%;">
                            <tr style="text-align: center;">
                                <td style="width: 50%;"></td>
                                <td style="width: 50%;">
                                    <hr style="width: 100%; border:2px solid #0080bf; float: right;" />
                                </td>
                            </tr>
                            <tr style="text-align: center;">
                                <td style="width: 50%;"></td>
                                <td style="width: 50%;">
                                    <span style="font-size: 14px; font-weight: bold;" t-esc="d.employee_id.last_name.upper()"/>
                                    <span style="font-size: 14px; font-weight: bold;" t-esc="d.employee_id.mothers_name.upper()"/>
                                    <span style="font-size: 14px; font-weight: bold;" t-esc="d.employee_id.first_name.upper()"/>
                                    <span style="font-size: 14px; font-weight: bold;" t-esc="d.employee_id.middle_name.upper()"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>
    <record id="paper_format_letter_custom" model="report.paperformat">
        <field name="name">Carta Custom</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>
    <report id="action_payslip_report" string="Nómina Custom" model="hr.payslip" report_type="qweb-pdf"
            name="dimabe_rrhh.report_payslip" menu="True" paperformat="paper_format_letter_custom"/>
</odoo>