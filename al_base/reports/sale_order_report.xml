<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_sale_order_report">
        <t t-call="web.html_container">
                <div class="page">
                    <t t-foreach="docs" t-as="d">
                        <div style="width: 100%;">
                            <div style="width: 49%; height: 130px; display: inline-block;">
                                <table style="margin-left: 60px;">
                                    <tr>
                                        <td colspan="3" style="text-align: center;">
                                            <span t-field="res_company.name" style="font-size: 14px;   font-weight: bold;"/>
                                            <p style="font-size: 10px; " t-field="res_company.l10n_cl_activity_description"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width: 10%;">
                                            <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
                                            style="max-width: 100px; max-height: 60px"/>
                                        </td>
                                        <td style="width: 80%; font-size: 10px; text-align: center;">
                                            <span t-field="res_company.street"/><br/>
                                            Mesa Central: <span t-field="res_company.phone"/><br/>
                                            E-mail:<span t-field="res_company.email"/><br/>
                                            <span t-field="res_company.website"/>
                                        </td>
                                        <td style="width: 10%;">
                                            <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.certificate_logo)"
                                            style="max-width: 100px; max-height: 60px" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div style="width: 50%; display: inline-block;">
                                <table style="border:4px solid; border-color: #ff0000; float: right; width: 60%; height: 120px;">
                                    <tr>
                                        <td style="text-align:center;color:#ff0000; font-weight: bold;">
                                            R.U.T.:
                                            <span style="color:#ff0000;" t-field="res_company.vat"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;color:#ff0000; font-weight: bold;">
                                            NOTA DE VENTA
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;color:#ff0000; font-weight: bold;">
                                            <span t-field="d.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <br/>
                        <div style="width:100%;margin:0 auto;border:1px solid; border-radius: 5px; ">
                            <table style="width:98%;margin: 0 auto;font-size:11px; padding: 6px;" cellspacing="1">
                                    <tr>
                                        <td style="text-align:left;">
                                            <strong>SEÑORES:</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <t t-if="not d.partner_id.parent_id">
                                                <span style="text-transform: uppercase;" t-field="d.partner_id.name"/>
                                            </t>
                                            <t t-else="">
                                                <span style="text-transform: uppercase;" t-field="d.partner_id.parent_id.name"/>
                                            </t>
                                        </td>
                                        <td style="text-align:left;">
                                            <strong>R.U.T.</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <span style="text-transform: uppercase;" t-field="d.partner_id.vat"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:left;">
                                            <strong>DIRECCION:</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <span style="text-transform: uppercase;" t-field="d.partner_id.street"/>
                                        </td>
                                        <td style="text-align:left;">
                                            <strong>FECHA:</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:left;">
                                            <strong>CIUDAD:</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <span style="text-transform: uppercase;" t-field="d.partner_id.city_id.name"></span>
                                        </td>
                                        <td style="text-align:left;">
                                            <strong>O/COMPRA</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <span style="text-transform: uppercase;" t-esc="d.client_order_ref"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:left;">
                                            <strong>FONO:</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <span t-field="d.partner_id.phone"/>
                                        </td>
                                        <td style="text-align:left;">
                                            <strong>COND. DE VENTA</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <span style="text-transform: uppercase;" t-field="d.payment_term_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:left;">
                                            <strong>ATENCION:</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <t t-if="d.partner_id.child_ids and len(d.partner_id.child_ids) > 0">
                                                <t t-set="have_contact" t-value="False"/>
                                                <t t-foreach="d.partner_id.child_ids.sorted(key=lambda a: a.create_date)" t-as="child">
                                                    <t t-if="child.type == 'contact' and not have_contact">
                                                        <span style="text-transform: uppercase;" t-field="child.name" />
                                                        <t t-set="have_contact" t-value="True"/>
                                                    </t>
                                                </t>
                                            </t>

                                        </td>
                                    </tr>
                            </table>
                        </div>
                        <div style="width:100%;margin:0 auto;min-height:600px;border:1px solid; border-radius: 5px; margin-top:4px;">
                            <table style="width:100%;font-size:11px;" cellspacing="0">
                                <tr>
                                    <th style="width:10%;border-right:1px solid;border-bottom:1px solid; padding-top: 6px;">
                                        CANTIDAD
                                    </th>
                                    <th style="width:14%;border-right:1px solid;border-bottom:1px solid; padding-top: 6px;">
                                        CODIGO
                                    </th>
                                    <th style="width:52%;border-right:1px solid;border-bottom:1px solid; padding-top: 6px;">
                                        DESCRIPCIÓN
                                    </th>
                                    <t t-if="d.is_comercionet">
                                        <th style="width:8%;border-right:1px solid; border-bottom:1px solid;padding-top: 6px;">
                                            PRECIO LISTA
                                        </th>
                                        <th style="width:8%;border-right:1px solid; border-bottom:1px solid;padding-top: 6px;">
                                            PRECIO VENTA
                                        </th>
                                        <th style="width:8%;border-bottom:1px solid;padding-top: 6px;">TOTAL</th>
                                    </t>
                                    <t t-else="">
                                        <th style="width:12%;border-right:1px solid; border-bottom:1px solid;padding-top: 6px;">
                                            VALOR UNIT.
                                        </th>
                                        <th style="width:12%;border-bottom:1px solid;padding-top: 6px;">TOTAL</th>
                                    </t>

                                </tr>
                                <t t-foreach="d.order_line" t-as="line">
                                    <tr>
                                        <t t-if="line.display_type">
                                            <td style="border-bottom:1px solid;"></td>
                                            <td colspan="4" style="border-bottom:1px solid;text-align:left;">
                                                <p style="padding: 4px"><i><span t-field="line.name"/></i></p>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td style="border-right:1px solid;border-bottom:1px solid;text-align:right;padding-right:4px;">
                                                <span t-esc="int(line.product_uom_qty)"/>
                                            </td>
                                            <td style="border-right:1px solid;border-bottom:1px solid;text-align:left;padding-right:4px;padding-left:4px;">
                                                <span t-field="line.product_id.default_code"/>
                                            </td>
                                            <td style="border-right:1px solid;border-bottom:1px solid;text-align:left;padding-right:4px;padding-left:4px;">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-if="d.is_comercionet">
                                                <td style="border-right:1px solid;border-bottom:1px solid;text-align:right;padding-right:4px;">
                                                    <span t-esc="d.roundclp(line.price_list_comercionet)"/>
                                                </td>
                                            </t>
                                            <td style="border-right:1px solid;border-bottom:1px solid;text-align:right;padding-right:4px;">
                                                <span t-esc="d.roundclp(line.price_unit)"/>
                                            </td>
                                            <td style="border-bottom:1px solid;text-align:right;padding-right:4px;">
                                                <!--<span t-field="line.price_subtotal"/>-->
                                                <span t-esc="d.roundclp(line.price_unit * line.product_uom_qty)"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </table>
                        </div>
                        <div style="margin-top: 4px; width:100%; min-height:100px;">
                            <div style="width:48%; float:right; border:1px solid; border-radius: 5px;">
                                <table style="font-size:11px; padding: 6px;" cellspacing="0">
                                    <tr>
                                        <th style="border-right: 1px solid;text-align: left; width: 50%">
                                            SUBTOTAL
                                        </th>
                                        <td style="text-align: left;">
                                            <span style="margin-left:4px;">$</span>
                                        </td>
                                        <td style="text-align: right;width:70%;">
                                            <span t-esc="d.roundclp(d.amount_untaxed + d.amount_discount)"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="border-right: 1px solid;text-align: left">
                                            DESCUENTOS
                                        </th>
                                        <td style="text-align: left;">
                                            <span style="margin-left:4px;">$</span>
                                        </td>
                                        <td style="text-align: right;width:70%;">
                                            <span t-esc="d.roundclp(d.amount_discount)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="border-right: 1px solid;text-align: left;width:30%;">
                                            NETO
                                        </th>
                                        <td style="text-align: left;">
                                            <span style="margin-left:4px;">$</span>
                                        </td>
                                        <td style="text-align: right;width:70%;">
                                            <span t-esc="d.roundclp(d.amount_untaxed)"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="border-right: 1px solid;text-align: left">
                                            19% I.V.A
                                        </th>
                                        <td style="text-align: left;">
                                            <span style="margin-left:4px;">$</span>
                                        </td>
                                        <td style="text-align: right;width:70%;">
                                            <span t-esc="d.roundclp(d.amount_tax)"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="border-right: 1px solid;text-align: left">
                                            TOTAL NOTA DE VENTA
                                        </th>
                                        <td style="text-align: left; width:70%;">
                                            <span style="margin-left:4px;">$</span>
                                        </td>
                                        <td style="text-align: right;width:70%;">
                                            <span t-esc="d.roundclp(d.amount_total)"></span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div style="margin-top:100px;">
                            <table style="width: 40%">
                                <tr><td><hr style="border: 1px solid"/></td></tr>
                                <tr><th><span t-field="d.user_id"/></th></tr>
                            </table>
                        </div>
                    </t>
                </div>
        </t>
    </template>

    <report id="action_custom_sale_order_report" string="Presupuesto / Pedido Custom" model="sale.order" report_type="qweb-pdf" groups="al_base.custom_templates"
            name="al_base.custom_sale_order_report" menu="True" paperformat="paper_format_letter_custom" print_report_name="object._get_custom_report_name()"
    />
</odoo>