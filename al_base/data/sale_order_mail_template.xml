<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record id="so_to_amount_approve_mail_template" model="mail.template">
    <field name="name">Órden de venta por aprobación por Descuento</field>
    <field name="model_id" ref="al_base.model_sale_order"/>
    <field name="email_from">info@ambienteslimpiossa.cl</field>
    <field name="email_to">
      ${object.get_email_to_discount_approve()}
    </field>
    <field name="subject">Nueva órden de venta</field>
    <field name="body_html">
      <![CDATA[
          <p>Estimados,<br/><br/>
          Se ha generado una nueva órden de venta <a href="${object.base_url}/web#id=${object.id}&action=343&model=sale.order&view_type=form&cids=&menu_id=229">${object.name}</a>. La cual requiere aprobación por Descuento
          <br/>
          </p>
          Atte,<br/>
          ${(object.company_id.name)}
      ]]>
    </field>
  </record>
  <record id="so_to_approve_mail_template" model="mail.template">
    <field name="name">Órden de venta por confirmar por Cobranza</field>
    <field name="model_id" ref="al_base.model_sale_order"/>
    <field name="email_from">info@excellchile.cl</field>
    <field name="email_to">
      ${object.get_email_to('al_base.group_order_confirmation')}
    </field>
    <field name="subject">Nueva órden de venta</field>
    <field name="body_html">
      <![CDATA[
          <p>Estimados,<br/><br/>
          Se ha generado una nueva órden de venta <a href="${object.base_url}/web#id=${object.id}&action=343&model=sale.order&view_type=form&cids=&menu_id=229">${object.name}</a>. La cual requiere aprobación por Cobranza
          <br/>
          </p>
          Atte,<br/>
          ${(object.company_id.name)}
      ]]>
    </field>
  </record>
</odoo>