<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="purchase_order_form">
      <field name="name">Solicitudes de Presupuesto</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='origin']" position="before">
            <field name="date_delivered"/>
        </xpath>
        <xpath expr="//field[@name='partner_id']" position="attributes">
          <attribute name="domain">[('is_company','=',True)]</attribute>
        </xpath>
        <xpath expr="//header" position="inside">
          <field name="invisible_custom_btn_confirm" invisible="1"/>
          <button type="object" string="Confirmar Pedido por Monto" name="button_confirm"
                  attrs="{'invisible':['|',('invisible_custom_btn_confirm','=',True),('state','!=','toamountapprove')]}" class="oe_highlight"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>