<odoo>
  <record id="custom_range_approve_sale_act_window" model="ir.actions.act_window">
    <field name="name">Rangos de Aprobación Venta</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">custom.range.approve.sale</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="custom_range_approve_sale_tree_view" model="ir.ui.view">
    <field name="name">custom_range_approve_sale.tree</field>
    <field name="model">custom.range.approve.sale</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="user_ids" widget="many2many_tags"/>
        <field name="min_amount"/>
        <field name="max_amount"/>
      </tree>
    </field>
  </record>

  <record id="custom_range_approve_sale_form_view" model="ir.ui.view">
    <field name="name">custom_range_approve_sale.form</field>
    <field name="model">custom.range.approve.sale</field>
    <field name="arch" type="xml">
      <form string="Rangos de Aprobación Venta">
        <sheet>
          <group>
            <field name="name"/>
            <field name="user_configuration" widget="radio"/>
          </group>
          <group>
            <field name="user_ids">
              <tree>
                <field name="name"/>
                <field name="login"/>
              </tree>
            </field>
          </group>
          <group>
            <field name="external_user_ids" attrs="{'invisible':[('user_configuration','=','user')]}">
              <tree>
                <field name="name"/>
                <field name="login"/>
              </tree>
            </field>
          </group>
          <group>
            <group>
              <field name="min_amount"/>
            </group>
            <group>
              <field name="max_amount"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <menuitem groups="sales_team.group_sale_manager" name="Rangos de Aprobación Venta" id="custom_range_approve_sale_menu"
            parent="sale.menu_sale_config" action="custom_range_approve_sale_act_window"/>
</odoo>