<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="route_sheet_form_view" model="ir.ui.view">
            <field name="name">route_sheet.form</field>
            <field name="model">route.sheet</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object" name="generate_route_sheet" string="Generar"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="driver_id"/>
                                <field name="truck_id"/>
                                <field name="picking_id"/>
                                <field name="sell"/>
                                <button type="object" name="add_picking" string="Agregar" />
                            </group>
                            <group>
                                <field name="dispatch_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="origin"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="route_sheet_tree_view" model="ir.ui.view">
            <field name="name">route_sheet.tree</field>
            <field name="model">route.sheet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="driver_id"/>
                    <field name="truck_id"/>
                    <field name="dispatch_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="route_sheet_act_window" model="ir.actions.act_window">
            <field name="name">Hoja de Ruta</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">route.sheet</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Hoja de Ruta" id="route_sheet_menu" parent="sale.sale_menu_root" action="route_sheet_act_window"/>

    </data>
</odoo>