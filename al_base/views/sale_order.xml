<odoo>
    <data>
        <record id="sale_view_order_form_inherit" model="ir.ui.view">
            <field name="name">Formulario de Venta Heredado</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="l10n_latam_document_type_id"/>
                    <field name="client_order_ref" string="OC Cliente"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name="attrs">{'invisible': [('state', '!=', 'toconfirm')]}</attribute>
                    <attribute name="groups">al_base.group_order_confirmation</attribute>
                    <attribute name="string">Aprobar por Cr√©dito y Riesgo</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="groups">al_base.group_order_confirmation</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//tree//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//header" position="inside">
                    <field name="invisible_btn_confirm" invisible="1"/>
                    <button type="object" string="Confirmar" name="order_to_discount_approve" class="oe_highlight"
                            attrs="{'invisible':[('invisible_btn_confirm','=',True)]}"/>
                    <button name="action_cancel" groups="al_base.group_order_confirmation" type="object"
                            string="Cancelar"
                            attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'sent','sale','toconfirm']), ('id', '=', False)]}"/>

                </xpath>
            </field>
        </record>
        <record id="sale_order_tree_inherit" model="ir.ui.view">
            <field name="name">Sale Order Inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="invisible">0</attribute>
                    <attribute name="decoration-success">state == 'sale' or state == 'done'</attribute>
                    <attribute name="decoration-info">state == 'draft' or state == 'sent'</attribute>
                    <attribute name="widget">badge</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="after">
                    <field name="l10n_latam_document_type_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
