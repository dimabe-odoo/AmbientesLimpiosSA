<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_register_form_inherit_payment" model="ir.ui.view">
            <field name="name">account.payment.register.form.inherit.payment</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='communication']" position="after">
                <field name="check_number_invisible" invisible="1"/>
                <field name="check_number" attrs="{'invisible':[('check_number_invisible','=',True)]}"/>
              </xpath>
              <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="partner_bank_id" attrs="{'invisible':[('check_number_invisible','=',True)]}"/>
              </xpath>
            </field>
        </record>

    </data>
</odoo>