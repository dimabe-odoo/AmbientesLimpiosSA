<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_comercio_net_form_view" model="ir.ui.view">
            <field name="name">sale_order_comercio_net.form</field>
            <field name="model">sale.order.comercionet</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="have_client" invisible="1"/>
                        <field name="have_sale_order" invisible="1"/>
                        <field name="line_without_product" invisible="1" />
                        <field name="have_pdf" invisible="1"/>
                        <button type="object" name="download_pdfs" string="Obtener PDF"/>
                        <button type="object" string="Asignar cliente" attrs="{'invisible': [('have_client','=',True)]}" name="assign_client"/>
                        <button type="object" string="Crear Orden de Venta" attrs="{'invisible': [('have_sale_order','=',True)]}"  name="create_sale_order"/>
                        <button type="object" string="Asignar Producto" attrs="{'invisible': [('line_without_product','=',True)]}" name="update_product_id_line"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="purchase_order"/>
                            <h1>
                                <field name="purchase_order" readonly="1" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="client_code_comercionet" readonly="1"/>
                            </group>
                            <group>
                                <field name="sale_order_id" readonly="1"/>
                                <field name="pdf_file" readonly="1"/>
                                <field name="client_id" attrs="{'readonly':[('have_client','=',True)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detalles" name="details">
                                <field name="comercionet_line_id">
                                    <tree>
                                        <field name="number"/>
                                        <field name="product_id"/>
                                        <field name="product_code"/>
                                        <field name="price"/>
                                        <field name="quantity"/>
                                        <field name="discount_percent"/>
                                        <field name="final_price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_order_comercio_net_tree_view" model="ir.ui.view">
            <field name="name">sale_order_comercio_net.tree</field>
            <field name="model">sale.order.comercionet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date" string="Fecha de CreaciÃ³n"/>
                    <field name="purchase_order"/>
                    <field name="client_id"/>
                    <field name="client_code_comercionet"/>
                    <field name="sale_order_id"/>
                    <field name="total_price"/>
                </tree>
            </field>
        </record>

