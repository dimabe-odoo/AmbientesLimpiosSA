        <record id="sale_order_comercio_net_act_window" model="ir.actions.act_window">
            <field name="name">Ordenes de Venta ComercioNet</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.comercionet</field>
            <field name="view_mode">tree,form</field>
        </record>

        <template id="button_render_js" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script src="dimabe_comercionet/static/src/js/action_pdf.js" type="text/javascript"/>
            </xpath>
        </template>

        <menuitem name="Ordenes de Venta ComercioNet" id="sale_order_comercio_net_menu" parent="sale.sale_menu_root"
