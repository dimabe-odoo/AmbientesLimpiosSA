<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_inherit_view" model="ir.ui.view">
            <field name="name">Formulario de Venta ComercioNet</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='discount']" position="attributes">
                    <attribute name="digits">"[0, 0]"</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='discount']" position="attributes">
                    <attribute name="widget">integer</attribute>
                </xpath>
                <xpath expr="//field[@name='client_order_ref']" position="after">
                    <field name="comercionet_id" attrs="{'invisible':[('comercionet_id','=',None)]}"/>
                    <field name="comercionet_pdf" attrs="{'invisible':[('comercionet_id','=',None)]}"/>
                    <field name="file_pdf" attrs="{'invisible':[('comercionet_id','!=',None)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>